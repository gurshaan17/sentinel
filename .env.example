# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_RECONNECT_INTERVAL=5000
DOCKER_MAX_RECONNECT_ATTEMPTS=10
DOCKER_TIMEOUT=30000

# Google Cloud PubSub
GCP_PROJECT_ID=your-project-id
PUBSUB_TOPIC_NAME=sentinel-logs
PUBSUB_SUBSCRIPTION_NAME=sentinel-workers
# GCP_CREDENTIALS_PATH=./gcp-credentials.json
PUBSUB_BATCH_SIZE=100
PUBSUB_BATCH_DELAY=100
PUBSUB_MAX_OUTSTANDING=1000
PUBSUB_MAX_BYTES=104857600

# Monitoring
LOG_LEVEL=info
NODE_ENV=development
MONITOR_POLL_INTERVAL=10000
LOG_BUFFER_SIZE=100
MAX_LOGS_PER_SECOND=1000
HEALTH_CHECK_INTERVAL=30000

# Logging
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/sentinel.log

# Filters (comma-separated)
EXCLUDE_LABELS=sentinel.ignore=true